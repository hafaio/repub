{
  "name": "repub",
  "private": true,
  "version": "0.0.0",
  "repository": "git@github.com:hafaio/repub.git",
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "fmt": "pnpify prettier --cache --write 'src/*.ts' 'pages/*.tsx' 'components/*.tsx' '*.json'",
    "lint:tsc": "pnpify tsc",
    "lint:es": "pnpify eslint --cache 'src/*.ts' 'pages/*.tsx' 'components/*.tsx'",
    "lint": "yarn lint:tsc && yarn lint:es",
    "test": "jest --silent --coverage",
    "build:images": "<<< $'16\n32\n48\n128' xargs -I@ convert -background none -resize @x@ public/repub.svg images/repub_@.png && convert images/repub_*.png favicon.ico",
    "build:bundle": "esbuild src/background.ts --outfile=background.js --bundle --minify && esbuild src/offscreen.ts --outfile=offscreen.js --bundle --minify",
    "build:options": "pnpify next build",
    "build": "yarn build:images && yarn build:bundle && yarn build:options",
    "prepack": "yarn build && yarn lint && yarn test",
    "postpack": "[ -f package.tgz ] && < package.tgz tar2zip > repub.zip && rm package.tgz"
  },
  "files": [
    "/background.js",
    "/favicon.ico",
    "/images/*.png",
    "/manifest.json",
    "/offscreen.html",
    "/offscreen.js",
    "/out/**/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@babel/runtime": "^7.22.6",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mozilla/readability": "^0.4.4",
    "@mui/icons-material": "^5.14.3",
    "@mui/material": "^5.14.3",
    "@next/eslint-plugin-next": "^13.4.12",
    "@types/babel__core": "^7.20.1",
    "@types/babel__preset-env": "^7.9.2",
    "@types/base64-js": "^1.3.0",
    "@types/chrome": "^0.0.243",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.8",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@yarnpkg/pnpify": "^4.0.0-rc.48",
    "babel-jest": "^29.6.2",
    "base64-js": "^1.5.1",
    "esbuild": "^0.18.18",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-spellcheck": "^0.0.20",
    "jest": "^29.6.2",
    "leven": "^4.0.0",
    "mhtml-stream": "^1.0.4",
    "next": "^13.4.12",
    "prettier": "^3.0.1",
    "prettier-plugin-organize-imports": "^3.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rmapi-js": "^3.0.2",
    "tar-to-zip": "^3.0.0",
    "teapub": "^1.0.3",
    "typescript": "5.1.6"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier",
      "plugin:@next/next/recommended"
    ],
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "spellcheck"
    ],
    "rules": {
      "no-control-regex": "off",
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "no-warning-comments": [
        "warn",
        {
          "terms": [
            "fixme"
          ],
          "location": "anywhere"
        }
      ]
    }
  },
  "packageManager": "yarn@3.3.1"
}
