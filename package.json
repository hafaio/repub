{
  "name": "repub",
  "private": true,
  "version": "0.0.1",
  "repository": "git@github.com:hafaio/repub.git",
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "fmt": "prettier --write 'src/*.ts' 'pages/*.tsx' 'components/*.tsx' '*.json' bundle.mjs",
    "lint": "tsc && eslint --cache 'src/*.ts' 'pages/*.tsx' 'components/*.tsx' bundle.mjs",
    "test": "jest --coverage",
    "build:images": "<<< $'16\n32\n48\n128' xargs -I@ convert -background none -resize @x@ public/repub.svg images/repub_@.png && convert images/repub_*.png favicon.ico",
    "build:bundle": "node bundle.mjs",
    "build:options": "next build && next export",
    "build": "yarn build:images && yarn build:bundle && yarn build:options",
    "prepack": "yarn lint && yarn test && yarn build",
    "postpack": "[ -f package.tgz ] && < package.tgz tar2zip > repub.zip && rm package.tgz"
  },
  "files": [
    "/manifest.json",
    "/images/*.png",
    "/favicon.ico",
    "/background.js",
    "/out/**/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/preset-env": "^7.18.0",
    "@babel/preset-typescript": "^7.17.12",
    "@babel/runtime": "^7.18.0",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mozilla/readability": "^0.4.2",
    "@mui/icons-material": "^5.8.0",
    "@mui/material": "^5.8.0",
    "@next/eslint-plugin-next": "^12.1.6",
    "@types/babel__core": "^7.1.19",
    "@types/babel__preset-env": "^7.9.2",
    "@types/base64-js": "^1.3.0",
    "@types/chrome": "^0.0.188",
    "@types/jest": "^27.5.1",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^17.0.35",
    "@types/offscreencanvas": "^2019.6.4",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@types/sharp": "^0.30.2",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.6",
    "add": "^2.0.6",
    "ajv": "^8.11.0",
    "babel-jest": "^28.1.0",
    "base64-js": "^1.5.1",
    "chalk": "4.1.2",
    "esbuild": "^0.14.39",
    "esbuild-plugin-ignore": "^1.1.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-spellcheck": "^0.0.19",
    "jest": "^28.1.0",
    "jsdom": "^19.0.0",
    "jtd": "^0.1.1",
    "mhtml-stream": "^0.0.2",
    "next": "^12.1.6",
    "node-html-parser": "^5.3.3",
    "parse5": "^7.0.0",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "read-tree": "^0.0.1",
    "rmapi-js": "^0.0.2",
    "sharp": "^0.30.4",
    "tar-to-zip": "^3.0.0",
    "teapub": "^0.0.2",
    "typescript": "^4.6.4",
    "yarn": "^1.22.18"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "plugin:@next/next/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "spellcheck"
    ],
    "rules": {
      "no-control-regex": "off",
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "no-warning-comments": [
        "warn",
        {
          "terms": [
            "fixme"
          ],
          "location": "anywhere"
        }
      ]
    }
  },
  "packageManager": "yarn@3.2.0"
}
