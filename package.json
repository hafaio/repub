{
  "name": "repub",
  "private": true,
  "version": "0.0.0",
  "repository": "git@github.com:hafaio/repub.git",
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "fmt": "prettier --cache --write 'src/*.ts' 'pages/*.tsx' 'components/*.tsx' '*.json' && cargo fmt",
    "lint:wasm": "cargo clippy",
    "lint:tsc": "pnpify tsc",
    "lint:es": "pnpify eslint --cache 'src/*.ts' 'pages/*.tsx' 'components/*.tsx'",
    "lint": "yarn lint:tsc && yarn lint:es && yarn lint:wasm",
    "test": "jest --silent --coverage",
    "build:wasm": "wasm-pack build -t web && cp pkg/repub_bind_bg.wasm .",
    "build:images": "<<< $'16\n32\n48\n128' xargs -I@ convert -background none -resize @x@ public/repub.svg images/repub_@.png && convert images/repub_*.png favicon.ico",
    "build:bundle": "esbuild src/background.ts --outfile=background.js --bundle --minify && esbuild src/offscreen.ts --outfile=offscreen.js --bundle --minify --define:import.meta.url=location.origin",
    "build:options": "pnpify next build && next export",
    "build": "yarn build:images && yarn build:wasm && yarn build:bundle && yarn build:options",
    "prepack": "yarn build && yarn lint && yarn test",
    "postpack": "[ -f package.tgz ] && < package.tgz tar2zip > repub.zip && rm package.tgz"
  },
  "files": [
    "/background.js",
    "/favicon.ico",
    "/images/*.png",
    "/manifest.json",
    "/offscreen.html",
    "/offscreen.js",
    "/out/**/*",
    "/repub_bind_bg.wasm"
  ],
  "devDependencies": {
    "@babel/core": "^7.21.5",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@babel/runtime": "^7.21.5",
    "@emotion/react": "^11.10.8",
    "@emotion/styled": "^11.10.8",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.12.2",
    "@next/eslint-plugin-next": "^13.3.2",
    "@types/babel__core": "^7.20.0",
    "@types/babel__preset-env": "^7.9.2",
    "@types/base64-js": "^1.3.0",
    "@types/chrome": "^0.0.234",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@yarnpkg/pnpify": "^4.0.0-rc.42",
    "ajv": "^8.12.0",
    "babel-jest": "^29.5.0",
    "base64-js": "^1.5.1",
    "esbuild": "^0.17.18",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-spellcheck": "^0.0.20",
    "jest": "^29.5.0",
    "jsdom": "^21.1.1",
    "jtd": "^0.1.1",
    "mhtml-stream": "^1.0.2",
    "next": "^13.3.2",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rmapi-js": "^3.0.0",
    "tar-to-zip": "^3.0.0",
    "typescript": "5.0.4"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier",
      "plugin:@next/next/recommended"
    ],
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "spellcheck"
    ],
    "rules": {
      "no-control-regex": "off",
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "no-warning-comments": [
        "warn",
        {
          "terms": [
            "fixme"
          ],
          "location": "anywhere"
        }
      ]
    }
  },
  "packageManager": "yarn@3.3.1"
}
